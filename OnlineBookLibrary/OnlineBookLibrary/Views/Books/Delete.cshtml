@model OnlineBookLibrary.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2 class="text-danger">Delete Confirmation</h2>

<h4>Are you sure you want to delete this book?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Author</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">Genre</dt>
    <dd class="col-sm-10">@Model.Genre</dd>

    <dt class="col-sm-2">Published Year</dt>
    <dd class="col-sm-10">@Model.PublishedYear</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
